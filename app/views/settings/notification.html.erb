<div class="max-w-3xl mx-auto px-4 py-8">

  <h1 class="text-2xl font-bold text-center mb-8">
    通知設定
  </h1>

  <div class="max-w-md mx-auto">

    <%= form_with model: @notification_setting,
          url: update_notification_settings_path,
          method: :patch,
          local: true,
          class: "space-y-6" do |f| %>

      <!-- 通知 ON / OFF -->
      <div>
        <p class="text-sm font-medium text-gray-700 mb-2">
          通知の有無
        </p>

        <div class="space-y-3">
          <% [[true, "通知ON"], [false, "通知OFF"]].each do |value, label| %>
            <label class="flex items-center gap-3 p-4 border rounded-md
                          cursor-pointer hover:bg-gray-50
                          has-[:checked]:border-blue-600
                          has-[:checked]:bg-blue-50">

              <%= f.radio_button :enabled, value,
                    class: "h-4 w-4 text-blue-600" %>

              <span class="text-base font-medium">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <!-- 通知時刻 -->
      <div>
        <%= f.label :notify_time, "通知時刻",
              class: "block text-sm font-medium text-gray-700 mb-1" %>

        <%= f.time_field :notify_time,
              value: @notification_setting.notify_time&.strftime("%H:%M"),
              class: "block w-full rounded-md border border-gray-300
                      px-3 py-2 bg-white
                      focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="pt-4">
        <%= f.submit "保存",
              class: "btn-outline mt-4" %>
      </div>

    <% end %>
  </div>

</div>
