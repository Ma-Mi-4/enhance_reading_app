<div class="page-container">

  <h1>通知設定</h1>

  <div class="setting-section">

    <%= form_with model: @notification_setting,
                  url: update_notification_settings_path,
                  method: :patch,
                  local: true do |f| %>

      <!-- 通知 ON/OFF -->
      <p><label>通知ON/OFF</label></page>

      <div class="setting-radio-group">

        <p><label class="setting-radio-option">
          <%= f.radio_button :enabled, true %>
          <span>通知ON</span>
        </label></p>

        <p><label class="setting-radio-option">
          <%= f.radio_button :enabled, false %>
          <span>通知OFF</span>
        </label></p>

      </div>

      <!-- 通知時刻 -->
      <p><label>通知時刻</label></p>
      <p><%= f.time_field :notify_time,
            value: @notification_setting.notify_time&.strftime("%H:%M") %></p>

      <%= f.submit "保存", class: "btn btn-primary w-full mt-4" %>

    <% end %>

  </div>

</div>
