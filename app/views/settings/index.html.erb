<div class="max-w-3xl mx-auto px-4 py-8">

  <h1 class="text-2xl font-bold text-center mb-8">
    設定
  </h1>

  <div class="max-w-md mx-auto space-y-4">

    <% level_path =
        @new_registration ? set_level_users_path : set_level_user_path(current_user) %>

    <%= link_to level_path,
          class: "block px-4 py-3 rounded-md border border-gray-300
                  hover:bg-gray-100 transition" do %>
      レベル設定変更
    <% end %>

    <%= link_to settings_notification_path,
          class: "block px-4 py-3 rounded-md border border-gray-300
                  hover:bg-gray-100 transition" do %>
      通知設定
    <% end %>

    <%= link_to settings_account_path,
          class: "block px-4 py-3 rounded-md border border-gray-300
                  hover:bg-gray-100 transition" do %>
      アカウント情報変更
    <% end %>

  </div>

</div>
