<div class="page-container">

  <h1>アカウント情報変更</h1>

  <!-- メールアドレス変更 -->
  <div class="setting-section">

    <h2>メールアドレス変更</h2>

    <%= form_with url: user_email_path, method: :patch, local: true do |f| %>

      <p><label>メールアドレス</label></p>
      <p><%= f.email_field :email, 
            value: current_user.email,
            required: true %></p>

      <p><%= f.submit "更新", class: "btn btn-primary" %></p>

    <% end %>

  </div>

  <!-- パスワード変更 -->
  <div class="setting-section">

    <h2>パスワード変更</h2>

    <%= form_with url: user_password_path, method: :patch, local: true do |f| %>

      <p><label>新しいパスワード</label></p>
      <p><%= f.password_field :password,
            placeholder: "新しいパスワード",
            required: true %></p>

      <p><label>確認用</label></p>
      <p><%= f.password_field :password_confirmation,
            placeholder: "確認用",
            required: true %></p>

      <p><%= f.submit "更新", class: "btn btn-primary" %></p>

    <% end %>

  </div>

</div>
