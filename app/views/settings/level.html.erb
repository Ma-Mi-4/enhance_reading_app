<div class="page-container">

  <h1><%= @new_registration ? "レベル設定" : "レベル設定変更" %></h1>

  <p>レベルを選択してください</p>

  <% if @new_registration %>
    <% form_url = update_level_for_registration_users_path %>
  <% else %>
    <% form_url = update_level_user_path(@user) %>
  <% end %>

  <div class="setting-section">

    <%= form_with(model: @user, url: form_url, method: :patch, local: true) do |f| %>

      <div class="radio-group">

        <p><label class="radio-item">
          <%= f.radio_button :level, 800 %> 800 点
        </label></p>

        <p><label class="radio-item">
          <%= f.radio_button :level, 700 %> 700 点
        </label></p>

        <p><label class="radio-item">
          <%= f.radio_button :level, 600 %> 600 点
        </label></p>

        <p><label class="radio-item">
          <%= f.radio_button :level, 500 %> 500 点
        </label></p>

      </div>

      <% if @new_registration %>
        <%= hidden_field_tag :new_registration, true %>
      <% end %>

      <%= f.submit "保存", class: "btn btn-primary w-full mt-4" %>

    <% end %>

  </div>

</div>
