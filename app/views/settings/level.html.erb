<div class="max-w-3xl mx-auto px-4 py-8">

  <h1 class="text-2xl font-bold text-center mb-4">
    <%= @new_registration ? "レベル設定" : "レベル設定変更" %>
  </h1>

  <p class="text-center text-gray-600 mb-8">
    目標とする TOEIC スコアを選択してください
  </p>

  <div class="max-w-md mx-auto">

    <%= form_with model: @user,
          url: update_level_user_path(@user),
          method: :patch,
          local: true,
          class: "space-y-4" do |f| %>

      <% [800, 700, 600, 500].each do |score| %>
        <label class="flex items-center gap-3 p-4 border rounded-md
                      cursor-pointer hover:bg-gray-50
                      has-[:checked]:border-blue-600
                      has-[:checked]:bg-blue-50">

          <%= f.radio_button :level, score,
                class: "h-4 w-4 text-blue-600" %>

          <span class="text-base font-medium">
            <%= score %> 点
          </span>
        </label>
      <% end %>

      <% if @new_registration %>
        <%= hidden_field_tag :new_registration, true %>
      <% end %>

      <div class="pt-4">
        <%= f.submit "保存",
              class: "btn-outline mt-4" %>
      </div>

    <% end %>
  </div>

</div>
