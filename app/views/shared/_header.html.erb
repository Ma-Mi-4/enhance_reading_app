<header data-turbo="false" x-data="{ open: false, dropdownOpen: false }" class="bg-white shadow">
  <nav class="container mx-auto flex items-center justify-between px-4 py-3">
    <h1 class="text-xl font-semibold text-gray-800">
      TOEIC長文トレーニング
    </h1>

    <div class="w-full lg:flex lg:items-center lg:w-auto hidden">
      <ul class="flex flex-col lg:flex-row w-full justify-end mt-4 lg:mt-0 items-center list-none">
        <li class="relative mr-4">
          <button
            @click="dropdownOpen = !dropdownOpen"
            class="px-2 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-md text-gray-700 focus:outline-none"
          >
          メニュー
          </button>

          <div
            x-show="dropdownOpen"
            @click.away="dropdownOpen = false"
            x-cloak
            class="absolute right-0 mt-2 w-36 bg-white border border-gray-200 rounded-md shadow-md py-1 z-50 text-sm"
          >
            <%= link_to '設定', settings_path, class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
            <% if @new_registration %>
              <%= link_to 'レベル設定変更', set_level_users_path, class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
            <% elsif current_user %>
              <%= link_to 'レベル設定変更', set_level_user_path(current_user), class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
            <% end %>
            <%= link_to '通知設定', settings_notification_path, class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
            <%= link_to 'アカウント情報変更', settings_account_path, class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
            <%= link_to 'メイン画面', main_path, class: 'block px-3 py-1.5 text-gray-700 hover:bg-gray-100' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>
