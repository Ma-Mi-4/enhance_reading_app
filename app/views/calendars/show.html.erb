<div class="max-w-3xl mx-auto px-4 py-6">

  <!-- タイトル -->
  <h1 class="text-2xl font-bold text-center mb-8">
    <%= @date.strftime('%Y年%m月%d日') %> の記録
  </h1>

  <!-- 記録カード -->
  <div class="max-w-md mx-auto space-y-2">

    <!-- 学習時間 -->
    <div class="fblock border border-gray-300 rounded-md px-4 py-3
                         hover:bg-gray-50 transition cursor-pointer">
      <span class="text-gray-600">学習時間</span>
      <span class="text-lg font-semibold">
        <%= @minutes.present? ? "#{@minutes}分" : "記録なし" %>
      </span>
    </div>

    <!-- 正答率 -->
    <div class="block border border-gray-300 rounded-md px-4 py-3
                         hover:bg-gray-50 transition cursor-pointer">
      <span class="text-gray-600">正答率</span>
      <span class="text-lg font-semibold">
        <%= @accuracy.present? ? "#{@accuracy}%" : "記録なし" %>
      </span>
    </div>

    <!-- 予想スコア -->
    <div class="block border border-gray-300 rounded-md px-4 py-3
                         hover:bg-gray-50 transition cursor-pointer">
      <span class="text-gray-600">予想スコア</span>
      <span class="text-lg font-semibold">
        <%= @score.present? ? "#{@score}点" : "記録なし" %>
      </span>
    </div>

  </div>

  <!-- 戻る -->
  <div class="mt-8 text-center">
    <%= link_to "カレンダーへ戻る",
          calendars_path,
          class: "border border-blue-400 text-blue-600 px-6 py-2 rounded-md
                 hover:bg-blue-50 transition text-sm" %>
  </div>

</div>
