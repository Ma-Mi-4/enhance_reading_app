<div class="max-w-5xl mx-auto px-4 py-8">

  <h1 class="text-2xl font-bold mb-6">
    問題詳細（管理者用）
  </h1>

  <!-- 基本情報 -->
  <div class="bg-white border rounded-lg p-6 mb-8 space-y-2">
    <p><span class="font-semibold text-gray-600">ID：</span><%= @question.id %></p>
    <p><span class="font-semibold text-gray-600">タイトル：</span><%= @question.title %></p>
    <p><span class="font-semibold text-gray-600">レベル：</span><%= @question.level %></p>
    <p><span class="font-semibold text-gray-600">種類：</span><%= @question.kind %></p>
  </div>

  <!-- JSON 内容 -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-2">
      内容（JSON）
    </h2>

    <pre class="bg-gray-100 border rounded-md p-4
                text-sm font-mono overflow-x-auto leading-relaxed">
<%= JSON.pretty_generate(@question.content || {}) %>
    </pre>
  </div>

  <!-- 戻る -->
  <div>
    <%= link_to "一覧に戻る",
          admin_questions_path,
          class: "inline-block px-4 py-2
                  border border-gray-300 rounded-md
                  text-gray-700
                  hover:bg-gray-100 transition" %>
  </div>

</div>
