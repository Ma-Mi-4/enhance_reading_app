<%= form_with model: [:admin, @question], local: true,
      class: "space-y-6 max-w-3xl" do |f| %>

  <!-- タイトル -->
  <div>
    <%= f.label :title, "タイトル",
          class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title,
          class: "block w-full rounded-md border border-gray-300
                  px-3 py-2 bg-white
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- レベル -->
  <div>
    <%= f.label :level, "レベル",
          class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :level, [500, 600, 700, 800], {},
          class: "block w-full rounded-md border border-gray-300
                  px-3 py-2 bg-white
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 種別 -->
  <div>
    <%= f.label :kind, "種別",
          class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :kind, ["part7", "quiz"], {},
          class: "block w-full rounded-md border border-gray-300
                  px-3 py-2 bg-white
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- 問題内容 -->
  <div>
    <%= f.label :content, "問題内容（JSON）",
          class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :content,
          value: @question.content&.to_json || '{}',
          rows: 10,
          class: "block w-full rounded-md border border-gray-300
                  px-3 py-2 font-mono text-sm bg-white
                  focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">
      JSON形式で入力してください
    </p>
  </div>

  <!-- 送信 -->
  <div>
    <%= f.submit "保存",
          class: "inline-block px-6 py-3
                  bg-blue-600 text-white rounded-md
                  hover:bg-blue-700 transition" %>
  </div>

<% end %>
