<h1>ログイン</h1>

<%= form_with url: login_path, method: :post do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "ログイン" %>
  </div>
  <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path %>
<% end %>
<p><%= link_to "新規登録はこちらから", new_user_path, class: "text-blue-500 hover:underline" %></p>
<p><%= link_to "管理者の方はこちら", admin_login_path %></p>
