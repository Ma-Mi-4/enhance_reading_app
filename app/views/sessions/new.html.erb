<div class="w-full max-w-3xl mx-auto px-4">
  <h1 class="text-2xl font-bold text-center mb-8">ログイン</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "space-y-6 text-center" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "block mb-2 font-medium" %>
      <%= f.email_field :email, class: "login-input" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block mb-2 font-medium" %>
      <%= f.password_field :password, class: "login-input" %>
    </div>

    <div class="text-center">
      <%= f.submit "ログイン", class: "btn btn-primary px-8" %>
    </div>

    <div class="text-center text-sm">
      <%= link_to "パスワードをお忘れの方はこちら",
          new_password_reset_path,
          class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-6 flex flex-col items-center text-center">
    <p class="text-sm text-gray-600 mb-2">または</p>

    <%= link_to auth_at_provider_path(:google),
          data: { turbo: false },
          class: "google-btn flex text-center" do %>
      Googleでログイン
    <% end %>
  </div>

  <div class="mt-8 text-center text-sm space-y-2">
    <%= link_to "新規登録はこちら", new_user_path, class: "text-blue-600 hover:underline" %><br>
    <%= link_to "管理者の方はこちら", admin_login_path, class: "text-gray-600 hover:underline" %>
  </div>
</div>
