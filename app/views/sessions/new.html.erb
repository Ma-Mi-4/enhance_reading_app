<div class="max-w-3xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-center mb-8">ログイン</h1>

  <%= form_with url: login_path, method: :post, local: true,
        class: "space-y-6 max-w-md mx-auto" do |f| %>

    <div>
      <%= f.label :email, "メールアドレス",
            class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email,
            class: "block w-full rounded-md border border-gray-300
                    px-3 py-2 bg-white
                    focus:outline-none focus:ring-2 focus:ring-blue-500
                    focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password, "パスワード",
            class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password,
            class: "block w-full rounded-md border border-gray-300
                    px-3 py-2 bg-white
                    focus:outline-none focus:ring-2 focus:ring-blue-500
                    focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "ログイン",
            class: "border border-blue-400 text-blue-600 px-6 py-2 rounded-md
                   hover:bg-blue-50 transition text-sm" %>
    </div>

    <div class="text-center text-sm">
      <%= link_to "パスワードをお忘れの方はこちら",
            new_password_reset_path,
            class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-8 flex flex-col items-center text-center">
    <p class="text-sm text-gray-600 mb-3">または</p>

    <%= link_to auth_at_provider_path(provider: :google),
          data: { turbo: false },
          class: "px-6 py-3 border border-gray-300 rounded-md
                  hover:bg-gray-100 transition text-sm" do %>
      Googleでログイン
    <% end %>
  </div>

  <div class="mt-8 text-center text-sm space-y-2">
    <%= link_to "新規登録はこちら",
          new_user_path,
          class: "text-blue-600 hover:underline" %><br>
    <%= link_to "管理者の方はこちら",
          admin_login_path,
          class: "text-gray-600 hover:underline" %>
  </div>
</div>
